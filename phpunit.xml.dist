<?xml version="1.0" encoding="UTF-8"?>

<phpunit
	bootstrap="vendor/autoload.php"
	colors="true"
	verbose="true"
	stopOnFailure="true">

	<testsuites>
		<testsuite name="unit">
			<file>./tests/HelloWorldTest.php</file>
		</testsuite>
	</testsuites>
  
  <filter>
    <whitelist>
      <directory>vendor/phpunit/php-code-coverage/src</directory>
    </whitelist>
  </filter>

</phpunit>
